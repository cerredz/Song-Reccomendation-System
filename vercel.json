{
  "version": 2,
  "builds": [
    {
      "src": "next-app/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/server.py",
      "use": "@vercel/python",
      "config": { "includeFiles": ["api/**", "scripts/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/server.py"
    }
  ]
}
